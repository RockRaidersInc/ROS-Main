<?xml version="1.0"?>

<!-- Written by Siddharth  -->

<robot name="arm">
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length = "0.2" radius = "2"/>
            </geometry>
                
        </visual>
    </link>
    <link name="turret">
        <visual>
            <geometry>
                <box size=".1 .1 .1"/>
            </geometry>
            <origin xyz="0 0 .5"/>
        </visual>
    </link>
    <link name="arm1">
        <visual>
            <geometry>
                <box size="1 1 10"/>
            </geometry>
            <origin xyz="0 0 5"/>
        </visual>
    </link>
    <link name="arm2">
        <visual>
            <geometry>
                <box size="1 1 10"/>
            </geometry>
            <origin xyz="0 0 5"/>
        </visual>
    </link>
    <link name="arm3">
        <visual>
            <geometry>
                <box size="1 1 4"/>
            </geometry>
            <origin xyz="0 0 2"/>
        </visual>
    </link>
    <joint name="base_link_to_turret" type="continuous">
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0.1"/>
        <parent link="base_link"/>
        <child link="turret"/>
    </joint>
    <joint name="turret_to_arm1" type="revolute">
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0.0" upper="6.28" velocity="0.5"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="turret"/>
        <child link="arm1"/>
    </joint>
    <joint name="arm1_to_arm2" type="revolute">
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0.0" upper="6.28" velocity="0.5"/>
        <origin rpy="0 0 0" xyz="0 0 10"/>
        <parent link="arm1"/>
        <child link="arm2"/>
    </joint>
    <joint name="arm2_to_arm3" type="revolute">
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="0.0" upper="6.28" velocity="0.5"/>
        <origin rpy="0 0 0" xyz="0 0 10"/>
        <parent link="arm2"/>
        <child link="arm3"/>
    </joint>
    
</robot>
